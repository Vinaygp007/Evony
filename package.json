{
  "name": "evony",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "backend": "ts-node backend/server.ts",
    "data-acquisition": "node services/evony-data-acquisition.js",
    "start-interceptor": "node services/evony-network-interceptor.js",
    "setup-acquisition": "npm install puppeteer ws && echo 'Data acquisition dependencies installed!'",
    "setup-backend": "npm install express socket.io pg cors dotenv && echo 'Backend dependencies installed!'",
    "full-stack": "concurrently \"npm run backend\" \"npm run dev\" \"npm run data-acquisition\"",
    "db-setup": "psql -c 'CREATE DATABASE evony_monsters;'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "leaflet": "^1.9.4",
    "next": "15.5.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "puppeteer": "^22.15.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-leaflet": "^4.2.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/leaflet": "^1.9.20",
    "@types/node": "^20",
    "@types/pg": "^8.10.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "socket.io": "^4.8.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
